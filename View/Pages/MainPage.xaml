<Page x:Class="PaymentExampleApp.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaymentExampleApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Button Content="Отчёт" Click="ReportButtonClick" x:Name="ReportButton" HorizontalAlignment="Right"/>
        <Button Content="Платежи"  Click="PaymentButton_Click"  x:Name="PaymentButton" HorizontalAlignment="Left"/>
    </Grid>
</Page>
